{% extends "base.njk" %}
{% block titulo %}habitaciones | Nueva{% endblock %}
{% block contenido %}
    <div class="container mt-4">
        <h1 class="mb-4">Inserción de nueva habitación</h1>

        <form action="/habitaciones" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div class="form-group">
                <label for="numero" class="form-label">Número de habitación:</label>
                 {% if errores.numero %}
                    <p class="text-danger"> {{ errores.numero }} </p>
                {% endif %}
                <input type="number" name="numero" class="form-control"  min="1" max="100">
            </div>

            <div class="form-group">
                <label for="tipo" class="form-label">Tipo de habitación:</label>
                <select name="tipo" class="form-select" >
                    <option value="individual">Individual</option>
                    <option value="doble">Doble</option>
                    <option value="familiar">Familiar</option>
                    <option value="suite">Suite</option>
                </select>
            </div>

            <div class="form-group">
                <label for="descripcion" class="form-label">Descripción de la habitación:</label>
                {% if errores.descripcion %}
                    <p class="text-danger"> {{ errores.descripcion }} </p>
                {% endif %}
                <textarea name="descripcion" class="form-control" ></textarea>
            </div>

            <div class="form-group">
                <label for="precio" class="form-label">Precio por noche:</label>
                {% if errores.precio %}
                    <p class="text-danger"> {{ errores.precio }} </p>
                {% endif %}
                <input type="number" name="precio" class="form-control"  min="1" max="250" step="0.01">
            </div>

            <div class="form-group">
                <label for="imagen" class="form-label">Imagen de la habitación:</label>
                <input type="file" name="imagen" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary">Guardar Habitación</button>
        </form>
         {% if error %}
         <h1>Error</h1>
        <div class="alert alert-danger">
            {{ error | safe }}
        {% endif %}
    </div>
{% endblock %}
